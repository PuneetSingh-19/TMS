<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <bottom>
      <AnchorPane fx:id="regPage" prefHeight="400.0" prefWidth="508.0" BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="-3.0" prefHeight="407.0" prefWidth="133.0" style="-fx-background-color: purple;" />
            <Label layoutX="154.0" layoutY="32.0" text="Login" textFill="PURPLE">
               <font>
                  <Font name="Times New Roman Bold" size="38.0" />
               </font>
            </Label>
            <Label layoutX="158.0" layoutY="127.0" text="Email">
               <font>
                  <Font name="Times New Roman Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="email" layoutX="160.0" layoutY="156.0" prefHeight="25.0" prefWidth="284.0" promptText="example@gmail.com">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label layoutX="160.0" layoutY="201.0" text="Password">
               <font>
                  <Font name="Times New Roman Bold" size="20.0" />
               </font>
            </Label>
            <PasswordField fx:id="password" layoutX="160.0" layoutY="230.0" prefHeight="25.0" prefWidth="287.0" promptText="Enter passwordd">
               <font>
                  <Font size="15.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnLogin" layoutX="160.0" layoutY="292.0" mnemonicParsing="false" onAction="#login" prefHeight="33.0" prefWidth="284.0" style="-fx-background-color: purple; -fx-border-color: purple; -fx-border-radius: 30; -fx-background-radius: 30;" text="Login" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label fx:id="wrongMsg" contentDisplay="CENTER" layoutX="154.0" layoutY="83.0" prefHeight="44.0" prefWidth="235.0" textFill="#ff0404">
               <font>
                  <Font name="Times New Roman" size="16.0" />
               </font>
            </Label>
            <Label layoutX="226.0" layoutY="335.0" text="New User?">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button fx:id="regBtn" layoutX="293.0" layoutY="330.0" mnemonicParsing="false" onAction="#registerPage" style="-fx-background-color: transparent;" text="Register" textFill="BLUE">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></AnchorPane>
   </bottom>
</BorderPane>
