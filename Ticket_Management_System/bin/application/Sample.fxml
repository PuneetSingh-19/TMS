<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <top>
      <AnchorPane prefHeight="380.0" prefWidth="508.0" BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="-3.0" layoutY="-6.0" prefHeight="388.0" prefWidth="133.0" style="-fx-background-color: purple;" />
            <Label layoutX="154.0" layoutY="32.0" text="Login" textFill="PURPLE">
               <font>
                  <Font name="Times New Roman Bold" size="38.0" />
               </font>
            </Label>
            <Label layoutX="158.0" layoutY="115.0" text="Username">
               <font>
                  <Font name="Times New Roman Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="160.0" layoutY="147.0" prefHeight="25.0" prefWidth="284.0" promptText="Enter username">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label layoutX="158.0" layoutY="197.0" text="Password">
               <font>
                  <Font name="Times New Roman Bold" size="20.0" />
               </font>
            </Label>
            <PasswordField fx:id="password" layoutX="159.0" layoutY="228.0" prefHeight="25.0" prefWidth="287.0" promptText="Enter password">
               <font>
                  <Font size="15.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnLogin" layoutX="338.0" layoutY="293.0" mnemonicParsing="false" onAction="#login" prefHeight="37.0" prefWidth="100.0" style="-fx-background-color: purple;" text="Login" textFill="WHITE">
